--- 
global: 
  env: 
    - 
      LARAVEL_ENV: production
web1: 
  after_deploy: 
    - "rm -f eltdpResources/cache/*"
    - "rm -f eltdpResources/views/*"
    - "rm -f eltdpPictures/cache/*"
    - "rm -f eltdpPictures/views/*"
  before_deploy: 
    - "php artisan migrate:install"
    - "php artisan migrate"
  after_build: 
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
  document_root: /public
  name: eltdp
  php_extensions: 
    - pdo_mysql
    - mcrypt
    - memcached
    - curl
    - imagick
    - zip
    - mbstring
  php_version: 5.4.14
  shared_writable_dirs:
  	- app/storage/cache
	- app/storage/database
	- app/storage/logs
	- app/storage/sessions
	- app/storage/views
	- app/storage/meta
    - /eltdpResources
    - /eltdpPictures
db1:
  name: eltdp
  type: mysql
